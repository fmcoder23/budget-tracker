<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial;
        display: flex;
        flex-direction: column;
        gap: 30px;
        align-items: center;
      }

      h1 {
        text-align: center;
      }
      table td {
        border: 1px solid black;
        padding: 10px 20px;
        text-align: center;
      }
      table input {
        font-size: 15px;
        border: 1px solid black;
        padding: 10px 20px;
        border-radius: 5px;
      }
      table input[type="submit"] {
        background-color: blueviolet;
        color: white;
        border: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>Admin Panel</h1>
    <table>
      <tr>
        <td>Full Name</td>
        <td>Phone Number</td>
        <td colspan="2">Action</td>
      </tr>
      <% users.forEach(el => { %>
        <tr>
            <td><%=el.fullname %></td>
            <td><%=el.phone %></td>
            <td>
                <form action="/api/users/edit/<%= el.id%>" method="post">
                    <input type="text" name="password" placeholder="Enter new password">
                    <input type="submit" value="Change password">
                </form>
            </td>
            <td>
                <form action="/api/users/delete/<%= el.id%>" method="post">
                    <input type="submit" value="Delete account">
                </form>
            </td>
          </tr>
      <% }) %>
    </table>
  </body>
</html>
